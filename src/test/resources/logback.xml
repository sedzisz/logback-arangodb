<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_DIRECTORY" value="/tmp"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
     ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="arangodb" class="com.sedzisz.logback.arangodb.ArangodbAppender">
        <facility>logback-arangodb-test</facility>
        <host>localhost</host>
        <port>8529</port>
        <database>logback_db</database>
        <collection>logs</collection>
        <user>logger</user>
        <password>logger</password>
        <async>false</async><!-- by default false -->
    </appender>

    <root>
        <level value="debug"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="arangodb"/>
    </root>
</configuration>